{
  "name": "connector-harness",
  "version": "0.2.0",
  "description": "Generic runtime for executing Rootstock (RSK) YAML configurations to extract data from APIs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "validate-rootstock": "./dist/cli.js",
    "rsk-extract": "./dist/runtime/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "validate": "tsx src/cli.ts",
    "extract": "tsx src/runtime/cli.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "connector",
    "rootstock",
    "rsk",
    "data-extraction",
    "elt"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "yaml": "^2.4.1",
    "graphql": "^16.8.1",
    "zod": "^3.22.4",
    "dotenv": "^16.4.1",
    "jsonpath-plus": "^10.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "tsx": "^4.7.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}
