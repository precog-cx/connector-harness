{
  "name": "connector-harness",
  "version": "0.2.0",
  "description": "Generic runtime for executing Rootstock (RSK) YAML configurations to extract data from APIs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "validate-rootstock": "./dist/runtime/validate-cli.js",
    "rsk-extract": "./dist/runtime/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "validate": "tsx src/runtime/validate-cli.ts",
    "extract": "tsx src/runtime/cli.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "connector",
    "rootstock",
    "rsk",
    "data-extraction",
    "elt"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "graphql": "^16.12.0",
    "jsonpath-plus": "^10.3.0",
    "open": "^10.2.0",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.1",
    "@types/node": "^20.19.27",
    "eslint": "^8.57.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
}
