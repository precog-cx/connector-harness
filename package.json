{
  "name": "connector-harness",
  "version": "0.1.0",
  "description": "Test harness for validating rootstock YAML connector configurations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "validate-rootstock": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "validate": "tsx src/cli.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "connector",
    "testing",
    "rootstock",
    "validation"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "yaml": "^2.4.1",
    "graphql": "^16.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1",
    "tsx": "^4.7.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}
